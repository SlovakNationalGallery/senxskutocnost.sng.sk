{% embed 'partials/base.html.twig' %}

{% block body %}
<body itemscope itemtype="http://schema.org/Article">
{% endblock %}

{% block content %}
    <main class="content {{ page.header.image ? 'tag-articleimage' : '' }}" role="main">
      <article class="post chapter">
        <div class="article-image">
          <div class="post-image-image" style="background-image: url({% if page.header.image %}{{ page.media[page.header.image].url }}{% endif %})">
            Article Image
          </div>
          {# <div class="post-meta">
                <h1 class="post-title">{{ page.header.titleStyled }}</h1>
          </div> #}
        </div>
        <section class="post-content">
          <div>{{page.header.chapterNumber}}.</div>
          <h1 class="margin-top-0 padding-top-0">
            {% if page.header.titleStyled %}
              {{ page.header.titleStyled }}
            {% else %}
              {{ page.header.title }}
            {% endif %}
          </h1>
          <div class="post-reading">
            <span class="post-reading-time"></span> read
          </div>
          <a name="topofpage"></a>

          {{ content }}
        </section>

      </article>
    </main>
{% endblock %}


{% block footer %}
  {% include 'partials/emailcapture.html.twig' with {
    'emailCTA': page.header.emailCTA, 
    'emailPlaceholder': page.header.emailPlaceholder, 
    'emailButton': page.header.emailButton, 
    'emailNotice': page.header.emailNotice} 
  %}
  {% include 'partials/footer.html.twig' with {
    'sharingButtons': true,
    'exhibitionLink': true,
    'orgIcons':       true,
    'copyright':      true,
    'stylingClasses': 'bg-grey c-black'}
  %}
{% endblock %}

{% endembed %}
